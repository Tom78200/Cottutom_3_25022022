/* animation loading spinner*/
@keyframes spin {
  0% {
    visibility: visible;
    transform: translate(-50%, -50%) rotate(0deg);
    opacity: 1;
  }
  90% {
    transform: translate(-50%, -50%) rotate(340deg);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
    opacity: 0;
    visibility: hidden;
  }
}
